{
  "apps": [{
    "name": "xs-novel-site",
    "script": "server.js",
    "cwd": "/www/wwwroot/xs.momofx.cn",
    "instances": 1,
    "exec_mode": "fork",
    "watch": false,
    "max_memory_restart": "500M",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3000
    },
    "log_file": "./logs/combined.log",
    "out_file": "./logs/out.log",
    "error_file": "./logs/error.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "time": true,
    "restart_delay": 1000,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}