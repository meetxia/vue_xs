{
  "apps": [{
    "name": "novel-site",
    "script": "server.js",
    "instances": 1,
    "exec_mode": "cluster",
    "watch": false,
    "max_memory_restart": "1G",
    "env": {
      "NODE_ENV": "production",
      "PORT": "3000"
    },
    "env_development": {
      "NODE_ENV": "development",  
      "PORT": "3000"
    },
    "log_file": "./logs/combined.log",
    "out_file": "./logs/out.log",
    "error_file": "./logs/error.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "time": true
  }]
}